<Page x:Class="_522_Pisetskii_Poltorabatko.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Pisetskii_Poltorabatko.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
          Title="Администратор">

    <Grid>
        <Frame x:Name="AdminFrame" NavigationUIVisibility="Hidden"/>

        <StackPanel x:Name="AdminPanel" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Верхний ряд из 3-х кнопок -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnTabUsers" Content="Таблица пользователей" 
                    Width="180" Height="41" Margin="10" Click="BtnTabUsers_Click"/>
                <Button x:Name="BtnTabCategory" Content="Таблица категорий" 
                    Width="180" Height="41" Margin="10" Click="BtnTabCategory_Click"/>
                <Button x:Name="BtnTabPayment" Content="Таблица платежей" 
                    Width="180" Height="41" Margin="10" Click="BtnTabPayment_Click"/>
            </StackPanel>

            <!-- Нижняя кнопка по центру -->
            <Button x:Name="BtnTabDiagram" Content="Диаграммы" 
                Width="180" Height="41" Margin="10" Click="BtnTabDiagram_Click"/>
        </StackPanel>
    </Grid>
</Page>
