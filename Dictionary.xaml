<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Цвета -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1A1A1A"/>
    <!-- Темный фон -->
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#E0E0E0"/>
    <!-- Светло-серый текст -->
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#808080"/>
    <!-- Серый акцент -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2D2D2D"/>
    <!-- Темно-серый для кнопок -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#4D4D4D"/>
    <SolidColorBrush x:Key="DropDownTextBrush" Color="#000000"/>
    <!-- Черный текст для кнопок со списками -->

    <!-- Базовые шрифты -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

    <!-- Стиль окна -->
    <Style TargetType="Window" x:Key="WindowStyleKey">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стиль DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="RowBackground" Value="#2D2D2D"/>
        <Setter Property="AlternatingRowBackground" Value="#262626"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="All"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="ColumnHeaderHeight" Value="32"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <!-- Стиль для подсказок -->
    <Style x:Key="HintTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="{x:Null}">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для капчи -->
    <Style x:Key="CaptchaTextBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Стиль TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="CaretBrush" Value="#E0E0E0"/>
    </Style>

    <!-- Стиль ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- Стиль текстов -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="HeaderText">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
    </Style>

    <!-- Основной стиль кнопок -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                            <Setter Property="BorderBrush" Value="#505050"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PressedBrush}"/>
                            <Setter Property="BorderBrush" Value="#606060"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#1A1A1A"/>
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter Property="BorderBrush" Value="#333333"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для кнопок, которые открывают списки -->
    <Style x:Key="DropDownButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Foreground" Value="{DynamicResource DropDownTextBrush}"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D0D0D0"/>
                            <Setter Property="BorderBrush" Value="#707070"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#C0C0C0"/>
                            <Setter Property="BorderBrush" Value="#606060"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#A0A0A0"/>
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter Property="BorderBrush" Value="#909090"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для кнопок меню -->
    <Style x:Key="MenuButtonStyle" TargetType="Button" BasedOn="{StaticResource DropDownButtonStyle}">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</ResourceDictionary>