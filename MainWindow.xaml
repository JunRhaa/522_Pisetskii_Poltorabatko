<Window x:Class="_522_Pisetskii_Poltorabatko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_522_Pisetskii_Poltorabatko"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Главное окно" Height="500" Width="800"
        Style="{DynamicResource WindowStyleKey}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Button x:Name="BackButton" Content="Назад" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Width="75" Height="35"
                    Margin="10,0,0,0"
                    Click="BackButton_Click"/>
            <ComboBox x:Name="ThemeSelector"
              Width="150" Height="25"
              HorizontalAlignment="Right"
              VerticalAlignment="Center"
              Margin="0,0,10,0"
              SelectionChanged="ThemeSelector_SelectionChanged">
                <ComboBoxItem Content="Классическая тема" Tag="Dictionary.xaml" IsSelected="True"/>
                <ComboBoxItem Content="Цветная тема" Tag="AnotherTheme.xaml"/>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="1">
            <Frame x:Name="MainFrame"  NavigationUIVisibility="Hidden" />

            <StackPanel x:Name="WelcomePanel" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Приветствую вас в приложении!" 
                           HorizontalAlignment="Center"
                           Style="{StaticResource HeaderText}"
                           Margin="0,0,0,15"
                           />
                <Button Content="Авторизация" Width="120" Height="40" Click="AuthButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock x:Name="DateTimeNow"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Height="35"
                       Width="194"
                       Margin="0,0,10,0"
                       />
        </Grid>
    </Grid>
</Window>